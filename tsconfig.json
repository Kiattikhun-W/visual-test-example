{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2022",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types":["@types/mocha", "@types/node", "@types/chai"],
    "lib": ["es2022", "DOM"],

  },
  "include": ["src/**/*.ts"],
  "exclude": ["./dist"],

}